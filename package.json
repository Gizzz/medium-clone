{
  "name": "medium-clone",
  "version": "0.1.0",
  "description": "Yet another clone of medium.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gizzz/medium-clone.git"
  },
  "engines": {
    "node": "8.11.1",
    "npm": "5.6.0"
  },
  "scripts": {
    "build-client-dev": "cd client && npm run build-dev",
    "build-client-prod": "cd client && npm run build-prod",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "cd server && npm run dev",
    "dev-client": "shx rm -rf dist && cd client && npm run build-dev-watch",
    "prod": "npm run build-prod && npm run start",
    "lint": "eslint --ext .js --ext .jsx src/ ",
    "lint-fix": "eslint --fix --ext .js --ext .jsx src/ ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "loc": "cloc src server/src --exclude-dir=vendor",
    "\n# ===================== DEPLOY SCRIPTS: ========================": "",
    "publish": "git push heroku master",
    "heroku-postbuild": "npm run build-prod",
    "start": "cd server && npm run prod"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "cloc": "^2.3.3",
    "concurrently": "^3.6.0",
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "pre-commit": "^1.2.2",
    "shx": "^0.3.2"
  }
}
