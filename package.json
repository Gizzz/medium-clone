{
  "name": "medium-clone",
  "version": "0.1.0",
  "description": "Yet another clone of medium.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gizzz/medium-clone.git"
  },
  "engines": {
    "node": "8.11.1",
    "npm": "5.6.0"
  },
  "scripts": {
    "build": "npm run build-prod",
    "build-dev": "webpack --env.MODE=dev --config webpack.config.js --progress",
    "build-prod": "webpack --env.MODE=prod --config webpack.config.js --progress",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "nodemon src/server/index.js",
    "dev-client": "webpack-dev-server --env.MODE=dev --config webpack.config.js --progress",
    "prod": "npm run build-prod && npm run start",
    "lint": "eslint --ext .js --ext .jsx src/ ",
    "lint-fix": "eslint --fix --ext .js --ext .jsx src/ ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node src/server/index.js",
    "loc": "npx cloc src/ --exclude-dir=vendor",
    "\n# ===================== DEPLOY SCRIPTS: ========================": "",
    "publish": "git push heroku master",
    "heroku-postbuild": "npm run build-prod",
    "\n# ===================== MARKUP SCRIPTS: ========================": "",
    "sass": "node-sass markup-static/styles/index.scss markup-static/styles/index.css -w -r --source-map=markup-static/styles/index.css.map",
    "loc-markup": "npx cloc markup-static/ --exclude-lang=CSS --exclude-dir=vendor"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "json-server": "^0.14.0",
    "lowdb": "^1.0.0",
    "medium-editor": "^5.23.3",
    "prop-types": "^15.6.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-loadable": "^5.4.0",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.4",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^3.6.0",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "optimize-css-assets-webpack-plugin": "^4.0.2",
    "postcss-loader": "^2.1.5",
    "pre-commit": "^1.2.2",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.6",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "webpack-dev-server": "^3.1.4"
  }
}
