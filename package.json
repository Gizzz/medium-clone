{
  "name": "medium-clone",
  "version": "0.1.0",
  "description": "Yet another clone of medium.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gizzz/medium-clone.git"
  },
  "engines": {
    "node": "8.11.1",
    "npm": "5.6.0"
  },
  "babel": {
    "presets": "./.babelrc.js"
  },
  "scripts": {
    "build": "npm run build-prod",
    "build-dev": "webpack --env.MODE=dev --config webpack.config.js --progress",
    "build-prod": "webpack --env.MODE=prod --config webpack.config.js --progress",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "nodemon src/server/index.js",
    "dev-client": "shx rm -rf dist && npm run build-dev -- --watch",
    "prod": "npm run build-prod && npm run start",
    "lint": "eslint --ext .js --ext .jsx src/ ",
    "lint-fix": "eslint --fix --ext .js --ext .jsx src/ ",
    "test": "npm run test-once",
    "test-once": "jest",
    "test-watch": "jest --watch",
    "test-debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "start": "cross-env NODE_ENV=production node src/server/index.js",
    "debug": "cross-env NODE_ENV=test node --nolazy --inspect-brk=9229 src/server/index.js",
    "loc": "cloc src/ --exclude-dir=vendor",
    "\n# ===================== DEPLOY SCRIPTS: ========================": "",
    "publish": "git push heroku master",
    "heroku-postbuild": "npm run build-prod"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.10",
    "lodash-id": "^0.14.0",
    "lowdb": "^1.0.0",
    "medium-editor": "^5.23.3",
    "prop-types": "^15.6.1",
    "query-string": "^6.1.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-loadable": "^5.4.0",
    "react-router-dom": "^4.3.1",
    "sanitize-html": "^1.18.2"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.4",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "cloc": "^2.3.3",
    "concurrently": "^3.6.0",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "faker": "^4.1.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "optimize-css-assets-webpack-plugin": "^4.0.2",
    "postcss-loader": "^2.1.5",
    "pre-commit": "^1.2.2",
    "sass-loader": "^7.0.3",
    "shx": "^0.3.2",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.6",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4"
  }
}
